---
import Select from './Select.astro'
import SelectItem from './SelectItem.astro'

const {
  label,
  description,
  errorMessage,
  isInvalid,
  disabled,
  placeholder,
  variant,
  color,
  rounded,
  isDisabled
} = Astro.props
---

<Select
  label={label}
  description={description}
  errorMessage={errorMessage}
  isInvalid={isInvalid}
  isDisabled={disabled}
  placeholder={placeholder}
  variant={variant}
  color={color}
  rounded={rounded}
>
  <SelectItem value='manzana'>Manzana 🍎</SelectItem>
  <SelectItem value='banana'>Banana 🍌</SelectItem>
  <SelectItem value='naranja'>Naranja 🍊</SelectItem>
  <SelectItem value='uva'>Uva 🍇</SelectItem>
  <SelectItem value='sandia' isDisabled={isDisabled}>Sandía 🍉</SelectItem>
</Select>
